.button
    height: 5u
    justify-content center 
    align-items center
    border 1px solid #dddddd
    radius(l)
    padding 0 4u
    +tablet()
        max-width 25u
        padding 0 6u
    +wide()
        max-width 30u
        height 8u
        padding 0 8u
.buttonText
    color #636363
    font-weight 200
    font-size 2u
    +wide()
        font-size 2.5u

.blue
    background-color #8cc9f0
    border none
.blueText
    color white
    font-weight 300

.dark
    color white
    font-weight 200