.root
    margin-top 3u
    +wide()
        margin-top 6u
.plaintext
    text-align center
    font-size 13px
    line-height 3u
    color #636363
    font-weight 200
    +wide()
        font-size 2.5u
        line-height 5u

.bigtext
    text-align center
    font-weight 100 
    +wide()
        font-size 3u
        line-height 5.6u


.left
    text-align center
    +desktop()
        text-align left 

.justify
    text-align center
    +tablet()
        text-align justify 
