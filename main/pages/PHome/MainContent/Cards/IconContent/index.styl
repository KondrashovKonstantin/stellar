$border = #dddddd
$grey = #636363

.root
  display flex
  align-items center
  padding 0 2u
  +tablet()
    max-width 50%
  +desktop()
    max-width 33%

.icon-holder
  height 16u
  width 16u
  border 0.125u solid $border 
  border-radius 15u
  padding 3px
  +tablet()
    width 24u
    height 24u
    padding 7px
  +wide()
    width 32u
    height 32u
    border-radius 16u
    padding 15px

.inner-holder
  height 15u
  width 15u
  border 0.125u solid $border 
  border-radius 15u
  +tablet()
    width 22u
    height 22u
  +wide()
    width 28u
    height 28u

.icon-image
  position relative
  overflow hidden
  height 14u
  width 14u
  margin 2px
  +tablet()
    width 21u
    height 21u
  +wide()
    width 27u
    height 27u

.sub-title
  margin-top 3u
  font-weight 200
  color $grey
  font-size 2u
  +wide()
    font-size 3u
    padding-top 5u


