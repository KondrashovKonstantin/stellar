_border = #dddddd
_grey = #636363

.root
  align-items center
  padding 0 2u
  +tablet()
    max-width 50%
  +desktop()
    max-width 33%

.iconHolder
  height 16u
  width 16u
  border 1px solid _border 
  radius(circle)
  align-items center
  justify-content center
  +tablet()
    width 24u
    height 24u
  +wide()
    width 32u
    height 32u
    radius(circle)

.innerHolder
  height 15u
  width 15u
  border 1px solid _border 
  radius(circle)
  +tablet()
    width 22u
    height 22u
  +wide()
    width 28u
    height 28u

.iconImage
  overflow hidden
  height 12u
  width 12u
  margin 2px
  +tablet()
    width 18u
    height 18u
  +wide()
    width 25u
    height 25u

.subTitle
  margin-top 3u
  font-weight 200
  color _grey
  font-size 2u
  +wide()
    font-size 3u
    padding-top 5u


