$white_t = rgba(255, 255, 255, 0.65)
$white_transp = rgba(255, 255, 255, 0.35)

.root
    padding 4u 5u 8u 5u
    +tablet()
        padding 0 8u
    +desktop()
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content center
        padding 8u 8u
    +wide()
        padding 15u 15vw

.subtitle
    font-size 2.5u
    font-weight 300
    color white
    +wide()
        font-size 3u
.text
    color $white_t
    line-height 3u
    font-size 1.7u
    font-weight 300
    margin-top 2u
    +wide()
        font-size 2.2u
        line-height 4u
        padding-right 10u
        margin-top 4u

.contacts-wrapper
    margin-top 2u
    +wide()
        margin-top 4u
    &__line
        flex-direction row
        margin-top 2u
        +wide()
            margin-top 4u
    &__element
        flex 1
        font-weight 400
        color white
        font-size 1.7u
        +wide()
            font-size 2.2u

.detailed
    flex 3
    font-weight 300
    color $white_t

.social-wrapper
    flex-direction row
    margin-top 3u
    &__element
        margin-left 2u
        width: 4u
        height 4u
        border 0.125u solid $white_transp
        border-radius 4u
        +wide()
            width 8u
            height 8u
            border 0.25u solid $white_transp

    +wide()
        margin-top 8u
.snicon
    margin 7.5px
    width: 2u
    height 2u
    +wide()
        width 5u
        height 5u
        margin 11px

.cprt
    margin-top 4u
    color: $white_t
    font-size 1.2u
    +desktop()
        margin-top 12u
    +wide()
        font-size 2u

.wrapp-chld
    +desktop()
        display flex
        flex 1
        min-width 50%

.first 
    margin 0

.btn-wrapper
    margin-top 3u

.second-line
    margin-top 3u
    +desktop()
        margin-top 0